<?xml version="1.0" ?>
<robot name="ergojr-base" xmlns:xacro="http://www.ros.org/wiki/xacro">
    <xacro:property name="pi" value="3.14159265359"/>
    <xacro:property name="pihalf" value="${pi/2}"/>

    <material name="white">
        <color rgba="1 1 1 1"/>
    </material>

    <material name="black">
        <color rgba="0 0 0 1"/>
    </material>
    <material name="red">
        <color rgba="1 0 0 1"/>
    </material>

    <xacro:macro name="cylinder" params="length radius color:=white
                                        rotx:=0 roty:=0 rotz:=0
                                        posx:=0 posy:=0 posz:=0 ">
        <visual>
            <origin rpy="${rotx} ${roty} ${rotz}" xyz="${posx} ${posy} ${posz}"/>
            <geometry>
                <cylinder length="${length}" radius="${radius}"/>
            </geometry>
            <material name="${color}"/>
        </visual>
        <collision>
            <origin rpy="${rotx} ${roty} ${rotz}" xyz="${posx} ${posy} ${posz}"/>
            <geometry>
                <cylinder length="${length}" radius="${radius}"/>
            </geometry>
        </collision>
    </xacro:macro>


    <xacro:macro name="motor" params="rotx:=0 roty:=0 rotz:=0
                                    posx:=0 posy:=0 posz:=0">
        <visual>
            <origin rpy="${rotx} ${roty} ${rotz}" xyz="${posx} ${posy} ${posz}"/>
            <geometry>
                <box size=".024 .036 .027"/>
            </geometry>
            <material name="black"/>
        </visual>
        <collision>
            <origin rpy="${rotx} ${roty} ${rotz}" xyz="${posx} ${posy} ${posz}"/>
            <geometry>
                <box size=".024 .036 .027"/>
            </geometry>
        </collision>
        <inertial>
            <!--ACTUAL MASS-->
            <!--<mass value=".017"/>-->

            <!--NORMAL WORKING MASS-->
            <mass value=".1"/>
            <inertia ixx="1e-3" iyy="1e-3" izz="1e-3"/>
        </inertial>
    </xacro:macro>

    <xacro:macro name="pusher_bridgelink">
        <visual>
            <origin xyz="0 .0145 -.001"/>
            <geometry>
                <box size=".02 .045 .002"/>
            </geometry>
            <material name="white"/>
        </visual>
        <collision>
            <origin xyz="0 .0145 -.001"/>
            <geometry>
                <box size=".02 .045 .002"/>
            </geometry>
        </collision>

        <visual>
            <origin xyz="0 .0145 .028"/>
            <geometry>
                <box size=".02 .045 .002"/>
            </geometry>
            <material name="white"/>
        </visual>
        <collision>
            <origin xyz="0 .0145 .028"/>
            <geometry>
                <box size=".02 .045 .002"/>
            </geometry>
        </collision>
    </xacro:macro>

    <xacro:macro name="pusher_joint" params="prefix name start end posy:=0 posz:=0">
        <joint name="${prefix}${name}" type="revolute">
            <parent link="${prefix}${start}"/>
            <child link="${prefix}${end}"/>
            <origin xyz="0 ${posy} ${posz}"/>
            <limit effort="100.0" lower="-${pihalf}" upper="${pihalf}" velocity="0.5"/>
            <axis xyz="0 0 1"/>
        </joint>
    </xacro:macro>

    <xacro:macro name="pusher_stiffjoint" params="prefix name start end">
        <joint name="${prefix}${name}" type="fixed">
            <parent link="${prefix}${start}"/>
            <child link="${prefix}${end}"/>
            <origin xyz="0 .027 0"/>
        </joint>
    </xacro:macro>

    <xacro:macro name="ergojrpusher" params="prefix:=1 rotx_base:=0 roty_base:=0 rotz_base:=0
                                        posx_base:=0 posy_base:=0 posz_base:=0">

        <link name="${prefix}_anchor">
            <inertial>
                <mass value="1"/>
                <inertia ixx="1" iyy="1" izz="1"/>
            </inertial>
        </link>

        <joint name="${prefix}_anchor_to_base" type="fixed">
            <parent link="${prefix}_anchor"/>
            <child link="${prefix}_base"/>
            <origin xyz="${posx_base} ${posy_base} ${posz_base}" rpy="${rotx_base} ${roty_base} ${rotz_base}"/>
        </joint>

        <link name="${prefix}_base">
            <visual>
                <origin xyz="0 0 .005"/>
                <geometry>
                    <box size=".02 .02 .01"/>
                </geometry>
                <material name="white"/>
            </visual>
            <collision>
                <origin xyz="0 0 .005"/>
                <geometry>
                    <box size=".02 .02 .01"/>
                </geometry>
            </collision>
        </link>

        <xacro:pusher_joint prefix="${prefix}" name="_motor1_joint" posz=".01" start="_base" end="_motor1_link"/>

        <link name="${prefix}_motor1_link">
            <xacro:motor posx="0" posy=".009" posz=".0135"/>
        </link>

        <xacro:pusher_stiffjoint prefix="${prefix}" name="_motor1bridge2" start="_motor1_link"
                                 end="_motor1bridge2_link"/>

        <link name="${prefix}_motor1bridge2_link">
            <xacro:pusher_bridgelink/>
        </link>

        <xacro:pusher_joint prefix="${prefix}" name="_motor2_joint" posy=".027" start="_motor1bridge2_link"
                            end="_motor2_link"/>

        <link name="${prefix}_motor2_link">
            <xacro:motor posx="0" posy=".009" posz=".0135"/>
        </link>

        <xacro:pusher_stiffjoint prefix="${prefix}" name="_motor2bridge3" start="_motor2_link"
                                 end="_motor2bridge3_link"/>

        <link name="${prefix}_motor2bridge3_link">
            <xacro:pusher_bridgelink/>
        </link>

        <xacro:pusher_joint prefix="${prefix}" name="_motor3_joint" posy=".027" start="_motor2bridge3_link"
                            end="_motor3_link"/>

        <link name="${prefix}_motor3_link">
            <xacro:motor posx="0" posy=".009" posz=".0135"/>
        </link>


    </xacro:macro>

</robot>
