<?xml version="1.0" ?>
<robot name="puck" xmlns:xacro="http://www.ros.org/wiki/xacro">
  <material name="white">
    <color rgba="1 1 1 1"/>
  </material>
  <material name="black">
    <color rgba="0 0 0 1"/>
  </material>
  <material name="red">
    <color rgba="1 0 0 1"/>
  </material>
  <material name="blue">
    <color rgba="0 0 1 1"/>
  </material>
  <link name="2_anchor">
    <inertial>
      <mass value="0.001"/>
      <inertia ixx="1e-3" iyy="1e-3" izz="1e-3"/>
    </inertial>
  </link>
  <joint name="2_anchor_to_cube" type="fixed">
    <parent link="2_anchor"/>
    <child link="2_cube"/>
    <origin xyz="0 0 .015"/>
  </joint>
  <link name="2_cube">
    <visual>
      <origin rpy="0 0 0" xyz="0 0 0"/>
      <geometry>
        <box size="0.03 0.03 0.03"/>
      </geometry>
      <material name="blue"/>
    </visual>
    <collision>
      <origin rpy="0 0 0" xyz="0 0 0"/>
      <geometry>
        <box size="0.03 0.03 0.03"/>
      </geometry>
    </collision>
    <inertial>
      <mass value="0.1"/>
      <inertia ixx="1e-2" iyy="1e-2" izz="1e-2"/>
    </inertial>
  </link>
</robot>
